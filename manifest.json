{
  "manifest_version": 3,
  "name": "Voxels - The Pixels Extension",
  "description": "The Pixels Extension is a tool made for every pixels enthusiast. Essential and easy to use for every Web3 Gamer.",
  "version": "5.0.1",
  "icons": {
    "128": "icons/icon128.png"
  },
  "action": {
    "default_icon": "icons/icon128.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://play.pixels.xyz/*",
        "https://dashboard.pixels.xyz/*"
      ],
      "css": [
        "assets/style.css"
      ],
      "js": [
        "features/canvas.js",
        "features/gw.js",
        "features/itemHighlight.js",
        "features/entityHighlight.js",
        "features/marketItem.js",
        "features/info.js",
        "features/storages.js",
        "features/market_prices.js",
        "Content.js",
        "assets/utils.js",
        "assets/functions.js",
        "assets/inventory.js",
        "assets/tasks.js",
        "assets/charts/dist/chart.umd.js",
        "assets/charts/dist/chartjs-plugin-zoom.min.js",
        "assets/charts/dist/chart_tooltip.js",
        "pages/timer_page.js",
        "pages/storage_page.js",
        "pages/networth_page.js",
        "pages/tasks_page.js",
        "pages/premium_page.js",
        "pages/stats_page.js",
        "pages/gw_page.js",
        "pages/ms_page.js",
        "pages/land_page.js",
        "pages/search_page.js",
        "full_pages/guilds_page.js",
        "full_pages/pass_page.js",
        "full_pages/player_page.js",
        "full_pages/settings_page.js"
      ],
      "type": "module"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "images/*",
        "assets/display_names.json",
        "assets/crafting_recipes.json"
      ],
      "matches": [
        "https://play.pixels.xyz/*",
        "https://dashboard.pixels.xyz/*"
      ]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "storage",
    "notifications"
  ]
}